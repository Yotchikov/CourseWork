digraph Life {
Birth [shape=box, color=green, label="Birth"];
Child [shape=circle, color=cyan, label="Child"];
Young [shape=circle, color=cyan, label="Young"];
Adult [shape=circle, color=cyan, label="Adult"];
Elder [shape=circle, color=cyan, label="Elder"];
Death [shape=box, style=filled, color=black, fontcolor=red, label="Death"];
Hell [shape=box, color=red, fontcolor=red];
Heaven [shape=box, color=gold, fontcolor=gold];
Birth -> Child;
Child -> Young;
Young -> Adult;
Adult -> Elder;
Elder -> Death;
Death -> Birth [label="?", style=dotted]
}